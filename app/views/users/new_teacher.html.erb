<% provide(:title, 'Sign up') %>
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sign up</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 padding-0px">
      <%= form_for(@user, url: signup_teacher_path) do |f| %>
          <%= render 'shared/error_messages' %>
          
          <div class="col-md-12">
            <%= f.label :username %>
            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-users" aria-hidden="true"></i></span>
              <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
            </div>
          </div>

          <div class="col-md-6">
            <%= f.label :password %>
            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            </div>
          </div>

          <div class="col-md-6">
            <%= f.label :password_confirmation %>
            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Retyped Password' %>
            </div>
          </div>

          <div class="col-md-12">
            <%= f.label :name %>
            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
            </div>
          </div>

          <div class="col-md-12">
            <%= f.label :birthday %>
            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
              <%= f.date_field :birthday, class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-6">
            <%= f.label :age %>
            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-male fa-lg" aria-hidden="true"></i></span>
              <%= f.text_field :age, class: 'form-control', placeholder: 'Age' %>
            </div>
          </div>

          <div class="col-md-6">
            <%= f.label :gender %>
            <div class="form-group input-group width-100-per">
              <%= f.select :gender, [["Please select", ''], ["Male", 0], ["Female", 1]], {}, {class: 'form-control'} %>
            </div>
          </div>

          <div class="col-md-12">
            <%= f.label :email %>
            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
              <%= f.email_field :email, class: 'form-control' , placeholder: 'Email'%>
            </div>
          </div>

          <div class="col-md-12">
            <%= f.label :phone %>
            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-phone fa-lg" aria-hidden="true"></i></span>
              <%= f.text_field :phone, class: 'form-control' , placeholder: 'Phone'%>
            </div>
          </div>

          <div class="col-md-12">
            <%= f.label :address %>
            <div class="form-group input-group">
              <span class="input-group-addon"><i class="fa fa-map" aria-hidden="true"></i></span>
              <%= f.text_area :address, class: 'form-control', placeholder: 'Address', rows: '3' %>
            </div>
          </div>

          <div class="col-md-8 col-md-offset-2">
            <%= f.submit "Create my account", class: "btn btn-primary width-100-per" %>
          </div>
      <% end %>
    </div>
  </div>
</div>