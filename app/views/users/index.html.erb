<% provide(:title, 'Users') %>
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Users</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>

  <table class="table table-bordered table-striped table-condensed">
    <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Activate</th>
      <th>Role</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <%= form_for(user, url: update_status_path(user)) do |f| %>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
              <td>
                <%= f.select :activate, [["Activated", true], ["Deactivated", false]], {}, {class: 'form-control'} %>
              </td>
              <td>
                <%= f.select :role, [["Admin", 0], ["Teacher", 1], ["Student", 2]], {}, {class: 'form-control'} %>
              </td>
              <td>
                <%= button_tag(type: 'submit', class: "btn btn-default btn-no-border", name: 'commit') do %>
                    <i class='fa fa-pencil-square-o fa-lg' aria-hidden='true'></i>
                <% end %>
              </td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>